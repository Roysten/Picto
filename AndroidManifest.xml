        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light" >
        <activity
            android:name="nl.saxion.act.playground.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.saxion.act.playground.PuzzleActivity"
            android:label="Spelscherm"
            android:screenOrientation="portrait" />
        <activity
            android:name="nl.saxion.act.playground.PuzzlePickActivity"
            android:label="Pick a Level"
            android:screenOrientation="portrait" />
        <activity
            android:name="nl.saxion.act.playground.InstructionActivity"
            android:label="@string/title_activity_instruction"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="nl.saxion.act.playground.HighScoreActivity"
            android:label="@string/title_activity_high_score" >
        </activity>
